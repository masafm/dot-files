	instance=${input_array[2]}
    else
	user=masafumi_kashiwagi_datadoghq_com
	instance=${input_array[1]}
    fi
    instance=${instance/gcp/masafumi-kashiwagi}
    gcloud compute ssh --plain ${user}@${instance}
}

